    <Option>
      <DisplayName>Test</DisplayName>
      <Identifier>test</Identifier>
      <Menu>
        <Entry>
          <Name>1000 Files, 1MB Size</Name>
          <Value>-s 1048576 -n 1000</Value>
        </Entry>
        <Entry>
          <Name>1000 Files, 1MB Size, No Sync/FSync</Name>
          <Value>-s 1048576 -n 1000 -S 0</Value>
        </Entry>
        <Entry>
          <Name>5000 Files, 1MB Size, 4 Threads</Name>
          <Value>-s 1048576 -n 5000 -t 4</Value>
        </Entry>
        <Entry>
          <Name>4000 Files, 32 Sub Dirs, 1MB Size</Name>
          <Value>-s 1048576 -n 4000 -D 32</Value>
